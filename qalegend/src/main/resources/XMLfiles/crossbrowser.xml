<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="CrossBrowserTesting">
	<listeners>
		<listener class-name="com.obsqura.listeners.ExtentReporter"></listener>
	</listeners>
	<test name="chrome">
	<parameter name="browser" value="chrome"></parameter>
		<classes>
			<class name="com.obsqura.scripts.LoginPageTest" />
			<class name="com.obsqura.scripts.UsersPageTest" />
		</classes>
	</test>

	<test name="edge">
	<parameter name="browser" value="edge"></parameter>
		<classes>
			<class name="com.obsqura.scripts.LoginPageTest" />
			<class name="com.obsqura.scripts.UsersPageTest" />
		</classes>

	</test>
</suite> <!-- CrossBrowserTesting -->
